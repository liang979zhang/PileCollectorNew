<resources>

    <!--
       Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!-- API 11 theme customizations can go here. -->
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="actvity_root_layout">
        <item name="android:background">#00000000</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="common_header_title">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">21sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="nav_item_text">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="layoutmm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layoutmw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layoutwm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layoutww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textview_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textcolor_content</item>
        <item name="android:textSize">@dimen/textsize_common</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="textview_content_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textcolor_content_sub_title</item>
        <item name="android:textSize">@dimen/textsize_common_sub_title</item>
    </style>

    <style name="style_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_round_rect_edit_login</item>
        <item name="android:textSize">@dimen/textsize_common</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_pile_number" parent="@style/style_edittext">
        <item name="android:singleLine">true</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">9</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="style_pile_offset" parent="@style/style_pile_number">
        <item name="android:maxLength">3</item>
    </style>

    <style name="btn_blue" parent="layoutmw">
        <item name="android:textColor">@color/textcolor_content</item>
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:background">@color/color_main_title</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="listview_style_1">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="disease_small_img"></style>

    <style name="disease_item_text">
        <item name="android:textColor">#222222</item>
    </style>

    <style name="list_view_item_title">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="list_view_item_info">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>