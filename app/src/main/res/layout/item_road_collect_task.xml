<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/road_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G25" />

        <TextView
            android:id="@+id/road_collect_direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="xx->yy" />

        <TextView
            android:id="@+id/road_collect_data_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:minWidth="50dp"
            android:text="状态" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="桩号区间" />

        <TextView
            android:id="@+id/road_collect_start_pile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="k101+20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="～" />

        <TextView
            android:id="@+id/road_collect_finish_pile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="k601+20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="收集时间" />

        <TextView
            android:id="@+id/road_collect_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-1-1 08:00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="～" />

        <TextView
            android:id="@+id/road_collect_finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-1-1 16:00" />
    </LinearLayout>

</LinearLayout>